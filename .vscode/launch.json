    "version": "0.1.0",
    "configurations": [
    {
        "name": "Launch Chrome",
        "request": "launch",
        "type": "chrome",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}"
    },
        
        {
            "name": "Attach Chrome DevTools",
            "port": 9222,
            "request": "attach",
            "type": "devtools-for-chrome",
            "webRoot": "${workspaceFolder}"
        },
        
        {
            "type": "devtools-for-chrome",
            "request": "launch",
            "name": "Launch Chrome DevTools",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ]
}